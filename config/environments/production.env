# FinNexusAI Production Environment Configuration
# DO NOT COMMIT THIS FILE - Contains sensitive production secrets

# Application
NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database - Production PostgreSQL
DATABASE_URL=postgresql://finnexusai_prod:${DB_PASSWORD}@prod-db-cluster.finnexusai.com:5432/finnexusai_production
DATABASE_POOL_MIN=10
DATABASE_POOL_MAX=50
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Redis - Production Redis Cluster
REDIS_URL=redis://prod-redis-cluster.finnexusai.com:6379/0
REDIS_CLUSTER_NODES=redis://prod-redis-node1.finnexusai.com:6379,redis://prod-redis-node2.finnexusai.com:6379,redis://prod-redis-node3.finnexusai.com:6379

# JWT Configuration
JWT_SECRET=${JWT_SECRET_PROD}
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET_PROD}
JWT_REFRESH_EXPIRES_IN=7d

# External APIs - Production Keys
COINGECKO_API_KEY=${COINGECKO_API_KEY_PROD}
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY_PROD}
BLOOMBERG_API_KEY=${BLOOMBERG_API_KEY_PROD}
PLAID_CLIENT_ID=${PLAID_CLIENT_ID_PROD}
PLAID_SECRET=${PLAID_SECRET_PROD}
PLAID_ENVIRONMENT=production

# Blockchain - Production Networks
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/${INFURA_PROJECT_ID}
POLYGON_PROVIDER_URL=https://polygon-mainnet.infura.io/v3/${INFURA_PROJECT_ID}
BSC_PROVIDER_URL=https://bsc-dataseed.binance.org/
ARBITRUM_PROVIDER_URL=https://arb1.arbitrum.io/rpc

# AI Services - Production Keys
OPENAI_API_KEY=${OPENAI_API_KEY_PROD}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY_PROD}

# Payment Processing - Production
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_PROD}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY_PROD}
COINBASE_API_KEY=${COINBASE_API_KEY_PROD}
COINBASE_API_SECRET=${COINBASE_API_SECRET_PROD}

# Cloud Services - Production
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID_PROD}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_PROD}
AWS_REGION=us-east-1
AWS_S3_BUCKET=finnexusai-production-assets

# Monitoring - Production
SENTRY_DSN=${SENTRY_DSN_PROD}
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security - Production
ENCRYPTION_KEY=${ENCRYPTION_KEY_PROD}
BCRYPT_ROUNDS=12
QUANTUM_RESISTANT_ENCRYPTION=true

# Trading - Production
BINANCE_API_KEY=${BINANCE_API_KEY_PROD}
BINANCE_SECRET_KEY=${BINANCE_SECRET_KEY_PROD}
COINBASE_PRO_API_KEY=${COINBASE_PRO_API_KEY_PROD}
COINBASE_PRO_SECRET_KEY=${COINBASE_PRO_SECRET_KEY_PROD}

# Compliance - Production
SHARIA_COMPLIANCE_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
PCI_DSS_COMPLIANCE_ENABLED=true
SOC2_COMPLIANCE_ENABLED=true

# Performance - Production
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000
CACHE_TTL_SECONDS=300
CDN_ENABLED=true

# HFT Configuration - Production
HFT_ENABLED=true
HFT_CO_LOCATION_ENABLED=true
HFT_MAX_LATENCY_MS=0.5
HFT_RISK_LIMIT_USD=100000

# Arbitrage Configuration - Production
ARBITRAGE_ENABLED=true
ARBITRAGE_MIN_PROFIT_PERCENTAGE=0.3
ARBITRAGE_MAX_POSITION_SIZE_USD=50000

# Options & Derivatives - Production
DERIVATIVES_ENABLED=true
BLACK_SCHOLES_ENABLED=true
MONTE_CARLO_SIMULATIONS=50000

# Futurist Sandbox - Production
SANDBOX_ENABLED=true
QUANTUM_SIMULATOR_ENABLED=true
AI_MODELS_ENABLED=true

# Load Balancing
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=30

# Logging - Production
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=100MB
LOG_FILE_MAX_FILES=10

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/finnexusai.crt
SSL_KEY_PATH=/etc/ssl/private/finnexusai.key
SSL_CA_PATH=/etc/ssl/certs/finnexusai-ca.crt

# CDN Configuration
CDN_PROVIDER=cloudflare
CDN_CACHE_TTL=3600
CDN_EDGE_CACHE_TTL=86400

# Auto-scaling
AUTO_SCALE_ENABLED=true
MIN_REPLICAS=3
MAX_REPLICAS=50
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

