# FinNexusAI Staging Environment Configuration
# Testing environment with production-like settings

# Application
NODE_ENV=staging
PORT=3000
API_VERSION=v1

# Database - Staging PostgreSQL
DATABASE_URL=postgresql://finnexusai_staging:${DB_PASSWORD_STAGING}@staging-db.finnexusai.com:5432/finnexusai_staging
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20
DATABASE_SSL=true
DATABASE_SSL_REJECT_UNAUTHORIZED=true

# Redis - Staging Redis
REDIS_URL=redis://staging-redis.finnexusai.com:6379/0

# JWT Configuration
JWT_SECRET=${JWT_SECRET_STAGING}
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET_STAGING}
JWT_REFRESH_EXPIRES_IN=7d

# External APIs - Staging Keys
COINGECKO_API_KEY=${COINGECKO_API_KEY_STAGING}
ALPHA_VANTAGE_API_KEY=${ALPHA_VANTAGE_API_KEY_STAGING}
PLAID_CLIENT_ID=${PLAID_CLIENT_ID_STAGING}
PLAID_SECRET=${PLAID_SECRET_STAGING}
PLAID_ENVIRONMENT=sandbox

# Blockchain - Test Networks
WEB3_PROVIDER_URL=https://sepolia.infura.io/v3/${INFURA_PROJECT_ID}
POLYGON_PROVIDER_URL=https://polygon-mumbai.infura.io/v3/${INFURA_PROJECT_ID}
BSC_PROVIDER_URL=https://data-seed-prebsc-1-s1.binance.org:8545/

# AI Services - Staging Keys
OPENAI_API_KEY=${OPENAI_API_KEY_STAGING}
ANTHROPIC_API_KEY=${ANTHROPIC_API_KEY_STAGING}

# Payment Processing - Staging
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY_TEST}
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY_TEST}
COINBASE_API_KEY=${COINBASE_API_KEY_STAGING}
COINBASE_API_SECRET=${COINBASE_API_SECRET_STAGING}

# Cloud Services - Staging
AWS_ACCESS_KEY_ID=${AWS_ACCESS_KEY_ID_STAGING}
AWS_SECRET_ACCESS_KEY=${AWS_SECRET_ACCESS_KEY_STAGING}
AWS_REGION=us-east-1
AWS_S3_BUCKET=finnexusai-staging-assets

# Monitoring - Staging
SENTRY_DSN=${SENTRY_DSN_STAGING}
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security - Staging
ENCRYPTION_KEY=${ENCRYPTION_KEY_STAGING}
BCRYPT_ROUNDS=10

# Trading - Staging (Test Mode)
BINANCE_API_KEY=${BINANCE_API_KEY_TEST}
BINANCE_SECRET_KEY=${BINANCE_SECRET_KEY_TEST}
COINBASE_PRO_API_KEY=${COINBASE_PRO_API_KEY_TEST}
COINBASE_PRO_SECRET_KEY=${COINBASE_PRO_SECRET_KEY_TEST}

# Compliance - Staging
SHARIA_COMPLIANCE_ENABLED=true
GDPR_COMPLIANCE_ENABLED=true
PCI_DSS_COMPLIANCE_ENABLED=false
SOC2_COMPLIANCE_ENABLED=false

# Performance - Staging
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=500
CACHE_TTL_SECONDS=300
CDN_ENABLED=true

# HFT Configuration - Staging (Disabled)
HFT_ENABLED=false
HFT_CO_LOCATION_ENABLED=false
HFT_MAX_LATENCY_MS=100
HFT_RISK_LIMIT_USD=1000

# Arbitrage Configuration - Staging
ARBITRAGE_ENABLED=true
ARBITRAGE_MIN_PROFIT_PERCENTAGE=1.0
ARBITRAGE_MAX_POSITION_SIZE_USD=1000

# Options & Derivatives - Staging
DERIVATIVES_ENABLED=true
BLACK_SCHOLES_ENABLED=true
MONTE_CARLO_SIMULATIONS=1000

# Futurist Sandbox - Staging
SANDBOX_ENABLED=true
QUANTUM_SIMULATOR_ENABLED=false
AI_MODELS_ENABLED=true

# Load Balancing
LOAD_BALANCER_ENABLED=true
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=12
BACKUP_RETENTION_DAYS=7

# Logging - Staging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_FILE_MAX_SIZE=50MB
LOG_FILE_MAX_FILES=5

# SSL/TLS Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/finnexusai-staging.crt
SSL_KEY_PATH=/etc/ssl/private/finnexusai-staging.key

# CDN Configuration
CDN_PROVIDER=cloudflare
CDN_CACHE_TTL=1800
CDN_EDGE_CACHE_TTL=3600

# Auto-scaling
AUTO_SCALE_ENABLED=true
MIN_REPLICAS=2
MAX_REPLICAS=10
TARGET_CPU_UTILIZATION=70
TARGET_MEMORY_UTILIZATION=80

