{
  "dashboard": {
    "id": null,
    "title": "FinNexusAI Platform Overview",
    "tags": ["finnexusai", "overview", "production"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "5s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Health Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"finnexusai-backend\"}",
            "legendFormat": "Backend Services"
          },
          {
            "expr": "up{job=\"trading-engine\"}",
            "legendFormat": "Trading Engine"
          },
          {
            "expr": "up{job=\"hft-engine\"}",
            "legendFormat": "HFT Engine"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{job=\"finnexusai-backend\"}[5m])) by (method, endpoint)",
            "legendFormat": "{{method}} {{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8}
      },
      {
        "id": 3,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(http_request_duration_seconds_bucket{job=\"finnexusai-backend\"}[5m])) by (le))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, sum(rate(http_request_duration_seconds_bucket{job=\"finnexusai-backend\"}[5m])) by (le))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8}
      },
      {
        "id": 4,
        "title": "Trading Volume",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(trading_volume_total[5m])) by (asset)",
            "legendFormat": "{{asset}}"
          }
        ],
        "yAxes": [
          {
            "label": "Volume (USD)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 5,
        "title": "HFT Latency",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.99, sum(rate(hft_order_latency_seconds_bucket[1m])) by (le))",
            "legendFormat": "99th percentile"
          },
          {
            "expr": "histogram_quantile(0.95, sum(rate(hft_order_latency_seconds_bucket[1m])) by (le))",
            "legendFormat": "95th percentile"
          }
        ],
        "yAxes": [
          {
            "label": "Latency (ms)",
            "min": 0,
            "max": 0.01
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 6,
        "title": "Arbitrage Opportunities",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(arbitrage_opportunities_total[5m])) by (exchange_pair)",
            "legendFormat": "{{exchange_pair}}"
          }
        ],
        "yAxes": [
          {
            "label": "Opportunities/sec",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 24}
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends",
            "legendFormat": "Active Connections"
          },
          {
            "expr": "pg_stat_database_max_connections",
            "legendFormat": "Max Connections"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 8,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) by (instance) / sum(node_memory_MemTotal_bytes) by (instance) * 100",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "Memory Usage (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 9,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "{{instance}}"
          }
        ],
        "yAxes": [
          {
            "label": "CPU Usage (%)",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      },
      {
        "id": 10,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) by (job) / sum(rate(http_requests_total[5m])) by (job) * 100",
            "legendFormat": "{{job}}"
          }
        ],
        "yAxes": [
          {
            "label": "Error Rate (%)",
            "min": 0
          }
        ],
        "gridPos": {"h": 8, "w": 24, "x": 0, "y": 40}
      }
    ],
    "templating": {
      "list": [
        {
          "name": "environment",
          "type": "custom",
          "options": [
            {"text": "Production", "value": "production"},
            {"text": "Staging", "value": "staging"},
            {"text": "Development", "value": "development"}
          ],
          "current": {"text": "Production", "value": "production"}
        },
        {
          "name": "service",
          "type": "query",
          "query": "label_values(up, job)",
          "refresh": 1,
          "includeAll": true,
          "multi": true
        }
      ]
    },
    "annotations": {
      "list": [
        {
          "name": "Deployments",
          "datasource": "prometheus",
          "expr": "changes(up[1m]) > 0",
          "iconColor": "blue",
          "titleFormat": "Service {{job}} changed state",
          "textFormat": "Service {{job}} is now {{value}}"
        },
        {
          "name": "High Error Rate",
          "datasource": "prometheus",
          "expr": "sum(rate(http_requests_total{status=~\"5..\"}[5m])) > 0.01",
          "iconColor": "red",
          "titleFormat": "High Error Rate Detected",
          "textFormat": "Error rate is {{value}} req/sec"
        }
      ]
    }
  }
}

