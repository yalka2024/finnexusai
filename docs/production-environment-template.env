# FinAI Nexus Production Environment Configuration Template
# IMPORTANT: Replace all ${VARIABLE} placeholders with actual production secrets

# Application Configuration
NODE_ENV=production
PORT=3001
API_URL=https://api.finainexus.com
FRONTEND_URL=https://app.finainexus.com

# Database Configuration (Replace with production values)
POSTGRES_HOST=${POSTGRES_HOST}
POSTGRES_PORT=5432
POSTGRES_DB=finnexusai_production
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_SSL=true
POSTGRES_MAX_CONNECTIONS=20

# MongoDB Configuration (Replace with production values)
MONGODB_URI=${MONGODB_URI}
MONGODB_DB=finnexusai_production
MONGODB_SSL=true
MONGODB_REPLICA_SET=${MONGODB_REPLICA_SET}

# Redis Configuration (Replace with production values)
REDIS_HOST=${REDIS_HOST}
REDIS_PORT=6379
REDIS_PASSWORD=${REDIS_PASSWORD}
REDIS_TLS=true

# Security Configuration (Generate secure random values)
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRY=24h
REFRESH_TOKEN_SECRET=${REFRESH_TOKEN_SECRET}
ENCRYPTION_KEY=${ENCRYPTION_KEY}
SESSION_SECRET=${SESSION_SECRET}

# Payment Processing (Replace with live Stripe keys)
STRIPE_PUBLISHABLE_KEY=${STRIPE_PUBLISHABLE_KEY}
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}
STRIPE_MODE=live

# Email Configuration (Replace with production SMTP)
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
FROM_EMAIL=noreply@finainexus.com

# External APIs (Replace with production keys)
OPENAI_SECRET_KEY=${OPENAI_SECRET_KEY}
POLYGON_API_KEY=${POLYGON_API_KEY}

# Educational Platform Configuration
PLATFORM_MODE=educational
FINANCIAL_SERVICES_DISABLED=true
SIMULATION_ONLY=true
EDUCATIONAL_DISCLAIMERS_ENABLED=true

# Security Settings
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://app.finainexus.com
FORCE_HTTPS=true

# Monitoring
LOG_LEVEL=info
SENTRY_DSN=${SENTRY_DSN}
