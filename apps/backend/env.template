# FinNexusAI Backend Environment Configuration
# Copy this file to .env and customize for your environment

# Application Configuration
NODE_ENV=development
PORT=4000
APP_NAME=FinNexusAI Backend
APP_VERSION=1.0.0

# Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=finnexusai_dev
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password

MONGODB_URI=mongodb://localhost:27017/finnexusai_dev
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=your_mongo_password

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_TLS=false

# Authentication & Security
JWT_SECRET=your_super_secure_jwt_secret_key_minimum_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_key_minimum_32_characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

SESSION_SECRET=your_session_secret_key_minimum_32_characters

# Admin Configuration
ADMIN_EMAIL=admin@finnexusai.com
ADMIN_PASSWORD=Admin123!@#

# External API Configuration
MARKET_DATA_API_URL=https://api.coingecko.com/api/v3
MARKET_DATA_API_KEY=your_coingecko_api_key

# Blockchain Configuration
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your_project_id
ETHEREUM_CHAIN_ID=1
POLYGON_RPC_URL=https://polygon-rpc.com
POLYGON_CHAIN_ID=137
BSC_RPC_URL=https://bsc-dataseed.binance.org
BSC_CHAIN_ID=56

# Email Configuration
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
EMAIL_FROM=noreply@finnexusai.com

# SMS Configuration
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Monitoring & Observability
SENTRY_DSN=your_sentry_dsn
DATADOG_ENABLED=false
DATADOG_API_KEY=your_datadog_api_key

# Feature Flags
FEATURE_REGISTRATION=true
FEATURE_TRADING=true
FEATURE_PORTFOLIO=true
FEATURE_ANALYTICS=true
FEATURE_NOTIFICATIONS=true
FEATURE_2FA=false
FEATURE_BIOMETRIC_AUTH=false
FEATURE_SOCIAL_TRADING=false
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_AR_INTEGRATION=false
FEATURE_QUANTUM_OPTIMIZATION=false

# Performance & Scaling
CLUSTERING_ENABLED=false
CLUSTER_INSTANCES=2
BACKEND_PORT=4000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://finnexusai.com

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=100

# Compliance
PCI_COMPLIANCE_ENABLED=true
SOX_COMPLIANCE_ENABLED=true
DATA_RETENTION_DAYS=2555

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_STORAGE_TYPE=s3
BACKUP_S3_BUCKET=finnexusai-backups
BACKUP_S3_REGION=us-east-1

# Alert Configuration
ALERT_EMAIL_RECIPIENTS=alerts@finnexusai.com,admin@finnexusai.com
SLACK_WEBHOOK_URL=your_slack_webhook_url
SLACK_ALERT_CHANNEL=#alerts
PAGERDUTY_ENABLED=false
PAGERDUTY_INTEGRATION_KEY=your_pagerduty_key

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# Development Only
ENABLE_GRAPHQL_PLAYGROUND=true
ENABLE_SWAGGER_UI=true
LOG_SQL_QUERIES=false
DEBUG_QUERIES=false
