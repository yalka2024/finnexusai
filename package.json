{
    "name": "finnexusai",
    "version": "1.0.0",
    "description": "Enterprise-Grade Fintech Platform: HFT, AI, DeFi, Sharia-Compliant",
    "main": "apps/backend/src/app.js",
    "scripts": {
        "test": "jest --passWithNoTests --watchAll",
        "lint": "eslint . --fix",
        "full-audit": "jest --coverage --passWithNoTests && npm run lint && node scripts/database/migration-runner.js",
        "generate-tests": "node scripts/ai-test-gen.js",
        "dev": "nodemon apps/backend/src/app.js",
        "deploy": "bash scripts/deploy.sh",
        "db:setup": "node scripts/database/setup-dev-db.js",
        "db:migrate": "node scripts/database/db-manager.js migrate",
        "db:status": "node scripts/database/db-manager.js status",
        "db:backup": "node scripts/database/db-manager.js backup",
        "db:reset": "node scripts/database/db-manager.js reset",
        "db:test": "node scripts/database/test-migrations.js"
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.893.0",
        "@cloudflare/workers-types": "^4.20250920.0",
        "@elastic/elasticsearch": "^9.1.1",
        "axios": "^1.12.2",
        "bcryptjs": "^3.0.2",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "express": "^5.1.0",
        "express-rate-limit": "^8.1.0",
        "helmet": "^8.1.0",
        "ioredis": "^5.7.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.18.1",
        "morgan": "^1.10.1",
        "pg": "^8.16.3",
        "redis": "^5.8.2",
        "sequelize": "^6.37.7",
        "swagger-ui-express": "^5.0.1",
        "web3": "^4.16.0",
        "winston": "^3.17.0",
        "yamljs": "^0.3.0"
    },
    "devDependencies": {
        "@types/jest": "^29.5.8",
        "@typescript-eslint/eslint-plugin": "^6.21.0",
        "@typescript-eslint/parser": "^6.21.0",
        "artillery": "^2.0.25",
        "dotenv": "^16.6.1",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.0.0",
        "jest": "^29.7.0",
        "mongodb-memory-server": "^9.1.3",
        "nodemon": "^3.0.1",
        "prettier": "^3.0.3",
        "ts-jest": "^29.1.1"
    },
    "engines": {
        "node": ">=20.18.0"
    },
    "config": {
        "mongodb-memory-server": {
            "disablePostinstall": true
        }
    }
}
